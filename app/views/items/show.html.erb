<!DOCTYPE html>
<body>
  <!-- Navigation-->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container px-4 px-lg-5">
      <a class="navbar-brand" href="#!">Plants.com</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
          <li class="nav-item"><%= link_to "Home", { :action => "index" }, :method => "get", class: "Editlink" %></li>
          <li class="nav-item"><a class="nav-link" href="#!">About</a></li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Shop</a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="#!">全ての商品</a></li>
              <li><hr class="dropdown-divider" /></li>
              <li><a class="dropdown-item" href="#!">人気商品</a></li>
              <li><a class="dropdown-item" href="#!">新入荷</a></li>
            </ul>
          </li>
        </ul>
        <form class="d-flex">
          <button class="btn btn-outline-dark" type="submit">
            <i class="bi-cart-fill me-1"></i>
            カート
            <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
          </button>
        </form>
      </div>
    </div>
  </nav>
  <!-- Product section-->
  <section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
      <div class="row gx-4 gx-lg-5 align-items-center">
        <div class="col-md-6">
          <% if @item.item_image.attached? %>
            <%= image_tag @item.item_image, class: "card-img-top" %>
          <% end %>
          <div class="col-md-6">
            <div class="small mb-1">商品ID:<%= @item.id %></div>
            <h1 class="display-5 fw-bolder"><%= @item.name %></h1>
            <div class="fs-5 mb-5">
              <!-- Product price-->
              <%= @item.price %>
            </div>
            <p class="lead"><%= @item.description %></p>
            <div class="d-flex">
            <%= form_with(model: @line_item,url: line_items_path, method: :post,local: true)do |f| %>
              <%= f.select :quantity, (1..19).to_a %>
              <button class="btn btn-outline-dark flex-shrink-0" type="button">
                <i class="bi-cart-fill me-1"></i>
                <%= f.submit "カートに入れる" %>
                <% end %>  
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
    <!-- Related items section-->
    <section class="py-5 bg-light">
      <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">関連商品</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
          <% @related_items.each do |item| %>
            <div class="col mb-5">
              <%= link_to(item_path(item), class: "Editlink") do %>
                <div class="card h-100">
                  <!-- Product image-->
                  <% if @item && @item.item_image.attached? %>
                    <%= image_tag item.item_image, class: "card-img-top" %>
                  <% end %>
                  <!-- Product details-->
                  <div class="card-body p-4">
                    <div class="text-center">
                      <!-- Product name-->
                      <h5 class="fw-bolder"><%= item.name %></h5>
                      <!-- Product price-->
                      <%= item.price %>
                    </div>
                  </div>
                  <!-- Product actions-->
                  <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">カートに入れる</a></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Miki 12/2023</p>
      </div>
    </footer>
  </body>
</html>
